<h1>All our flats</h1>
<p>All <%= @flats.count %> flats.</p>
<% @flats.each do |flat| %>
<div class="card-flat">
  <img src="<%= flat.picture_url %>" alt="<%= flat.name %>">
  <div class="card-flat-infos">
    <h2><%= flat.name %></h2>
    <h3><%= flat.address %></h3>
    <h3><%= flat.number_of_guests %></h3>
    <h3><%= flat.price_per_night %></h3>
  </div>
  <div class="card-flat-actions">
    <%= link_to "More info", flat_path(flat)%>
    <%= link_to "Edit", edit_flat_path(flat)%>
    <%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
<% end %>
